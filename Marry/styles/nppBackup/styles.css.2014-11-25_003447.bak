/*----------------------------------------------------------------------------------*/
/*------------------------------RESET DEFAULT STYLES--------------------------------*/
/*----------------------------------------------------------------------------------*/
html,body                       { width:100%; height:100%; }
body                            { padding:0; margin:0; font:12px Tahoma, sans-serif; background:#fff; color:#000; }
div,p,a,span,em,strong,img,h1,h2,h3,h4,h5,h6,ul,ol,li,dl,dt,dd,table,td,tr,form,fieldset,label,select,checkbox,input,textarea {
	padding:0;
	margin:0;
	outline:none;
	list-style:none;
}
select, input, textarea        { font-size:12px; vertical-align:middle; }
textarea                       { vertical-align:top; }
*:focus                        { outline:none; }
input[type=submit]             { cursor:pointer; }
img, fieldset                  { border:0; }
table                          { border-collapse:collapse; border-spacing:0; }
a:link, a:visited              { font:12px Tahoma, sans-serif; color:#000; text-decoration:underline; }
a:hover                        { text-decoration:none; }
/*----------------------------------------------------------------------------------*/
/*-------------------------------------DEFAULT CLASSES------------------------------*/
/*----------------------------------------------------------------------------------*/
.float-r           	           { float:right !important; }
.float-l                       { float:left !important; }
.no-float                      { float:none !important; }
.no-border                     { border:0 !important; }
.no-bg                         { background:none !important; }
.no-margin                     { margin:0 !important; }
.no-padding                    { padding:0 !important; }
.no-display                    { display:none !important; }
.display                       { display:block !important; }
.inline                        { display:inline !important; }
.overflow                      { overflow:hidden !important; }
.align-r                       { text-align:right !important; }
.align-l                       { text-align:left !important; }
.align-c                       { text-align:center !important; }
.clear                         { clear:both; }

body {
	font: 13px "Trebuchet MS", Tahoma, sans-serif;
	background: url(../images/background.png);
}
/*----------------------------------------------------------------------------------*/
/*-------------------------------------WRAPPER--------------------------------------*/
/*----------------------------------------------------------------------------------*/
.wrapper {
	width: 780px;
	margin: 0 auto;
	padding: 0;
	background: #fff;
}
a.more {
	display: block;
	margin: 0 0 8px 0;
	width: 85px;
	background: url(../images/icon-next.png) no-repeat right 4px;
	font: 12px "Trebuchet MS", Tahoma, sans-serif;
	color: #4B8BBF;
	text-decoration: none;
}
a.more:hover {
	color: #274E6D;
}
/*----------------------------------------------------------------------------------*/
/*-------------------------------------HEADER---------------------------------------*/
/*----------------------------------------------------------------------------------*/
.header {
	height: 209px;
	padding: 15px 0 0 0;
	background: url(../images/header-image.png) no-repeat center;
}
.header a {
    display: block;
    width: 305px;
    height: 115px;
    margin: 37px 43px;
}
/*----------------------------------------------------------------------------------*/
/*-------------------------------------CONTENT--------------------------------------*/
/*----------------------------------------------------------------------------------*/
.content {
	margin: 0;
	padding: 0 40px;
}
.content span.title {										/*  приветствие сайта  */
	display: block;
	padding: 8px 15px;
	background: #FCF1F7;
	color: #D777B7;
	font: 18px Georgia, sans-serif;
	font-style: italic;
}
.content p {
	line-height: 18px;
	padding: 10px 10px 13px 0;
}
.content a.more + p {										/*  линия между статьями  */
	border-top: 1px solid #FCF1F7;
}
.content h3 {												/*  заголовок "Популярные разделы"  */
	margin: 25px 0 0 0;
	padding: 8px 15px;
	background: #EBF4FB;
	color: #4B8BBF;
	font: 18px Georgia, sans-serif;
	font-style: italic;
}
.content h3 + ul {
	overflow: hidden;
	margin: 10px 0;
}
.content h3 + ul li {
	float: left;
}
.content h3 + ul li a{
	display: block;
	width: 136px;
	margin: 0 6px 0 0;
}
.content h3 + ul li h4 a {
	color: #4B8BBF;
	text-decoration: none;
}
.content h3 + ul li h4 a:hover {
	color: #274E6D;
}
.content h3 + ul li a span {
	display: block;
	text-align: center;
	margin: 7px 0 0 0;
	font: 12px "Trebuchet MS", Tahoma, sans-serif;
}
/*----------------------------------------------------------------------------------*/
/*-------------------------------------SIDEBAR--------------------------------------*/
/*----------------------------------------------------------------------------------*/
.sidebar {
	overflow: hidden;
	padding: 15px 40px;
}
.sidebar-left {
	float: left;
	width: 320px;
	padding: 5px 15px 15px;
	background: #EBF4FB;
}
.sidebar-right {
	float: right;
	width: 301px;
	padding: 5px 15px 15px;
	background: #EBF4FB;
}
.sidebar h3 {
	background: #EBF4FB;
	color: #4B8BBF;
	font: 18px Georgia, sans-serif;
	font-style: italic;
}
.sidebar ul {
	margin: 13px 0;
}
.sidebar ul li {
	margin: 5px 0;
}
.sidebar ul li a {
	font: 12px "Trebuchet MS", Tahoma, sans-serif;
	text-decoration: none;
	color: #656565;
}
.sidebar ul li a:hover {
	color: #8888FF;
}
/*----------------------------------------------------------------------------------*/
/*-------------------------------------FOOTER---------------------------------------*/
/*----------------------------------------------------------------------------------*/
.footer {
	overflow: hidden;
	padding: 35px 40px 20px;
}
.footer span {
	display: block;
	padding: 0 30px;
	font: 11px "Trebuchet MS", Tahoma, sans-serif;
	color: #D97FBB;
	text-align: center;
}
.footer ul li {
	float: left;
	margin: 0 8px;
	line-height: 15px;
}
.footer ul li h1 {											/*  выравнивание заголовка по вертикали  */
	line-height: 11px;
}
.footer ul li a {
	display: block;
	margin: 4px 0;
	font: 11px "Trebuchet MS", Tahoma, sans-serif;
	color: #949494;
	text-decoration: none;
	text-align: center;
}
.footer ul li a:hover {
	color: #525252; 
}